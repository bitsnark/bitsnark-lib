{
  "name": "bitsnark",
  "version": "0.1.0",
  "description": "",
  "keywords": [
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": ""
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "run": "npx ts-node ./src/index.ts",
    "build": "npm run clean && npx tsc",
    "changelog": "conventional-changelog -p angular -u",
    "changelog:update": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "clean": "node -e \"var { rmdirSync, existsSync } = require('fs'), path = require('path'); ['./.nyc_output', './coverage', './dist'].forEach(fPath => {if (existsSync(path.join(__dirname, fPath))) rmdirSync(path.join(__dirname, fPath), { recursive: true })}); process.exit(0);\"",
    "clean:all": "npm run clean && (rm -r ./node_modules || true)",
    "cover": "nyc npm run test",
    "cover:check": "nyc --check-coverage --reporter=lcov npm run test",
    "lint": "eslint --ext .ts --fix src/**/*.ts test/**/*.ts",
    "preversion": "npm run build && npm run cover:check",
    "postversion": "git push && git push --tags",
    "prepare": "npm run build",
    "serve": "nodemon ./src/index.ts",
    "test": "npm run build && jest",
    "upgrade": "npx npm-check -u",
    "version": "npm run build && npm run changelog:update"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.4.1",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "chai": "^4.3.7",
    "conventional-changelog-cli": "^3.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.44.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "sinon": "^17.0.1",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "bigint-isqrt": "^0.3.2",
    "sitka": "^1.1.1",
    "snarkjs": "^0.7.4"
  }
}
